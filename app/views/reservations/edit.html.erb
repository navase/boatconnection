<div class="row">

  <div class="col-sm-8">
    <h1>Edit Reservation</h1>
    <%= form_for @reservation, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :start_date, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :start_date, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_date, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :end_date, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :number_of_persons, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :number_of_persons, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Save Reservation", class: "btn btn-primary" %>
          <%= link_to "Cancel", @reservation, class: "btn btn-default" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
