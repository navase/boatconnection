
<div class="row">

  <div class="col-sm-8">

<div class="form-horizontal">
<h1>Create New Offer</h1>
  <%= form_for(@offer) do |f|   %>
    <div class="form-group">
      <%= f.label :boat_id, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :boat_id, @boats.map { |boat| [boat.name, boat.id] }, :class => 'form-control' %>

      </div>
    </div>

    <div class="form-group">
        <%= f.label :price, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :price, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :period_start, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.date_select("period_start") %>
          <!-- <%= f.date_select :period_start, :class => 'form-control' %> -->
        </div>
      </div>
      <div class="form-group">
        <%= f.label :period_end, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.date_select :period_end, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :location, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create Offer", :class => "btn btn-warning" %>
			<%= f.button "Cancel", :class => "btn btn-default" %>
        </div>
      </div>
  <% end %>
</div>
</div>
  </div>

</div>
