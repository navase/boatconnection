    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1>Sail anywhere!</h1>
        <p>Do you not own a boat but you want to sail? Or do you own a boat that you don't use for a lot of the time? Rent your boat here!</p>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p>
        <%= link_to "Add a new boat", new_boat_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
<div class="container">
      <div class="row">
        <% @boats.each do |boat| %>
          <div class="col-md-3">
            <h2><%= link_to boat.name, boat %></h2>
            <p><%= image_tag boat.image %></p>
            <p><strong>Type:</strong> <%= boat.boat_type %></p>
            <p><strong>Capacity:</strong> <%= boat.capacity %></p>
            <p><strong>Drive type:</strong> <%= boat.drive %></p>
            <p class="btn btn-default" href="#" role="button"><%= link_to "View details >", boat %></p>
			         <% boat.offers.each do |offer| %>
           <li><strong>Price:</strong> <%= offer.price %>, from <%= offer.period_start %> until <%= offer.period_end %>. Pick up: <%= offer.location %></li>
           <% end %>
          </ul>


          </div>
        <% end %>
      </div>
</div>
