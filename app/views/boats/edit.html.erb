
<div class="row">

  <div class="col-sm-8">
    <h1>Edit: <%= @boat.name %></h1>
    <%= form_for @boat, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :boat_type, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :boat_type, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :capacity, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :capacity, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :drive, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
          <%= f.text_field :drive, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Save changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", @boat, class: "btn btn-default" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
